[user]
	name = David Numan
	email = david.numan@civicactions.com
[core]
	autocrlf = false
	excludesfile = /home/dave/.gitignore_global
[diff]
[color]
	branch = auto
	diff = auto
	interactive = auto
	status = auto
[alias]
	co = checkout
	ci = commit
	st = status
	graphlog = log --oneline --graph --branches
	g = grep -n --color
	d = difftool
	vimshow = difftool HEAD^
[push]
	default = simple
[branch]
	autosetuprebase = always
[credential]
	helper = cache --timeout=7200
[log]
	abbrevCommit = true
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[merge]
	tool = vimdiff
